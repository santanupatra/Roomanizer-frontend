.userDetailsBox{
  border: 1px solid #ccc;
}
.userDetailsBox label{
  width: 100%;
  display: block;
}
.userDetailsBox .input{
  width: 100%;
  height: 40px;
  padding: 0px 15px;
  border: 1px solid #ccc;
  display: block;
  border-radius: 4px;
}
.userDetailsBox .input:focus{
  outline: 0px;
}
.userDetailsBox textarea.input{
  height: 80px;
}
.btn.btn-blue{
  background-color: #014d81;
  color: #fff;
}
.AgentDP{
  position: relative;
  overflow: hidden;
  width: 20%;
  height: auto;
  /* margin: -100px auto 0px auto; */
  margin: 0 auto;
}
.AgentDP img{
  width: 120px;
  height: 120px;
  border-radius: 360px;
  /* border: 2px solid #014d81; */
  max-width: 100%;
  vertical-align: middle;
  object-fit: cover;
}
.uploadAgentDP{
  width: 30px;
  height: 30px;
  line-height: 40px;
  text-align: center;
  border-radius: 360px;
  position: absolute;
  right: 50px;
  bottom: 4px;
  overflow: hidden;
  background-color:#e2e2e2;
  color: #fff;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;  
}
.uploadAgentDP input{
  position: absolute;
  width: 40px;
  height: 40px;
  top: 0px;
  left: 0px;
  opacity: 0;
  cursor: pointer;
}
.svg-inline--fa {
  font-size: 14px !important;
  color:  #014d81;
}
.custm_save {
  display: flex;
  margin: 0 auto;
  background: white;
  color: #014d81;
  border: 1px solid #ccc;
  border-radius: 0;
}
.custm_save:hover {
  background-color:#014d81;
  color: white;
}